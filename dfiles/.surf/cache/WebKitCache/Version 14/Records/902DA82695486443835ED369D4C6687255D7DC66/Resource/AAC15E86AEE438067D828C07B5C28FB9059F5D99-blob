    objRootDSE.Get("defaultNamingContext"))

For i = 1 To 1000
    Set objLeaf = objContainer.Create("User", "cn=UserNo" &amp; i)
    objLeaf.Put "sAMAccountName", "UserNo" &amp; i
    objLeaf.SetInfo
